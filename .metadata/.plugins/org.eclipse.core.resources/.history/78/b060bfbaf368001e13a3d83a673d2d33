<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.review">

	<insert id="insertHospital" parameterType="Hospital">
	<![CDATA[
	insert into hospital (hname, comnum, htel, department, hpassword, lunch, clinic, hroad, hdong, hdetail, hpostcode, hurl ) values 
	(#{hname},#{comnum},#{htel},#{department},#{hpassword},#{lunch},#{clinic},#{hroad},#{hdong},#{hdetail},#{hpostcode},#{hurl} ) 
	]]>
	</insert>

	<select id="selectHospital" parameterType="String"
		resultType="Hospital">
	<![CDATA[
		select * from hospital where comnum=#{comnum}
	]]>
	</select>

	<update id="updateHospital" parameterType="Hospital">
		<trim prefix="SET" suffixOverrides=",">
			<if test="subject !=null">subject=#{subject},</if>
			<if test="email !=null">email=#{email},</if>
			<if test="number !=null">number=#{number},</if>
			<if test="address !=null">address=#{address},</if>
			<if test="clinictime !=null">clinic=#{clinic},</if>
			<if test="lunchtime !=null">lunch=#{lunch},</if>
		</trim>
		where num=#{num}
	</update>
	
	
	<select id="selectHospitalBydong" parameterType="String"
		resultType="Hospital">
	<![CDATA[
		select * from hospital 
		where department=#{department} 
		and hdong like '%#{si}%'
		and hdong like '%#{gu}%'
		and hdong like '%#{dong}%'
	]]>
	</select>
	
	<select id="selectHospitalList" resultType="Hospital">

	<![CDATA[
		select * from hospital 
	]]>
	</select>

</mapper>